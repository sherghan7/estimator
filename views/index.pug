extends layout

block content
  section.hero
    .hero-content
      h2.hero-title Professional Project Estimation
      p.hero-subtitle Create detailed estimates for all your services with our advanced estimation engine
      .hero-actions
        a.btn.btn-primary(href="/create-estimate") Create New Estimate
        a.btn.btn-secondary(href="/estimates") View Estimates

  section.features
    h2.section-title Our Estimation Platform Features
    .feature-grid
      .feature-card
        .feature-icon ⚙️
        h3 Comprehensive Builder
        p Build detailed estimates with services, contributors, and hourly rates

      .feature-card
        .feature-icon 💾
        h3 Smart Database
        p Intelligent storage of services, tasks, and contributor details

      .feature-card
        .feature-icon 📊
        h3 Export Options
        p Generate estimates in JSON or Excel format

      .feature-card
        .feature-icon 🚀
        h3 Real-time Updates
        p Add new services and tasks directly to the database
